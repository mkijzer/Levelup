{
  "name": "levelupordietrying",
  "version": "1.0.0",
  "description": "Lifestyle magazine with articles on health, wealth, tech, and more",
  "main": "index.html",
  "scripts": {
    "dev": "live-server --port=3000 --open=/",
    "build": "npm run generate-sitemap && echo 'âœ… Build complete! Netlify will handle minification.'",
    "build:css": "echo 'CSS minification handled by Netlify'",
    "build:js": "echo 'JS minification handled by Netlify'",
    "generate-sitemap": "node scripts/generate-sitemap.js",
    "minify:css": "npx clean-css-cli -o dist/css/styles.min.css css/*.css",
    "minify:js": "npx terser js/*.js -o dist/js/scripts.min.js --source-map",
    "optimize:images": "imagemin assets/images/**/* --out-dir=dist/assets/images",
    "serve": "live-server --port=3000",
    "start": "npm run dev",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean && mkdir -p dist/css dist/js dist/assets/images",
    "predeploy": "npm run generate-sitemap"
  },
  "keywords": [
    "lifestyle",
    "magazine",
    "health",
    "wealth",
    "tech",
    "productivity"
  ],
  "author": "LevelUpOrDieTrying",
  "license": "MIT",
  "devDependencies": {
    "clean-css-cli": "^5.6.2",
    "imagemin-cli": "^7.0.0",
    "live-server": "^1.2.2",
    "terser": "^5.24.0"
  }
}
